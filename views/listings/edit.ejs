<% layout("layouts/boilerplate.ejs") -%>
  <div class="row mt-3">
    <div class="col-8 offset-2">

      <h3>Edit your Listing..</h3>
      <br>
      <form method="post" novalidate class=" needs-validation" action="/listings/<%=listing._id%>?_method=PUT"
        enctype="multipart/form-data">
        <div class="mb-3">
          <label for="title" class="form-label">Title</label>
          <input type="text" placeholder="enter title" value="<%=listing.title%>" name="listing[title]"
            class="form-control" required>
          <div class="invalid-feedback">Please enter title </div>
        </div>

        <div class="mb-3">
          <label for="description" class="form-label">Descrption</label>
          <textarea placeholder="enter description.." name="listing[description]" class="form-control"
            required><%=listing.description%></textarea>
          <div class="invalid-feedback">Please enter a short description </div>
        </div>

        <div class="mb-3">
          Original Image <br>
          <img src="<%=originalImageUrl%>">
        </div>

        <div class="mb-3">

          <label for="image" class="form-label" class="form-control">Upload New Image</label>
          <input type="file" name="listing[image]" class="form-control">

        </div>

        <div class="mb-3 row">
          <div class="col-md-4">
            <label for="price" class="form-label">Price</label>
            <input type="number" placeholder="enter price" value="<%=listing.price%>" name="listing[price]"
              class="form-control" required>
            <div class="invalid-feedback">Enter a valid price </div>
          </div>
          <div class="mb-3 col-md-8">
            <label for="country" class="form-label">Country</label>
            <input type="text" placeholder="entry country" value="<%=listing.country%>" name="listing[country]"
              class="form-control" required>
            <div class="invalid-feedback">Please enter valid country name </div>
          </div>
        </div>

        <div class="mb-3">
          <label for="location" class="form-label">Location</label>
          <input type="text" placeholder="enter city name" value="<%=listing.location%>" name="listing[location]"
            class="form-control" required>
          <div class="invalid-feedback">Please enter valid location </div>
        </div>

        <div class="mb-3">
          <label for="category" class="form-label">Select Categories</label>
          <select name="listing[category][]" id="editDropdown" class="form-select" multiple size="1">
            <option value="" id="placeholderEdit" disabled <%=listing.category.length===0 ? 'selected' : '' %>>Select
              Category</option>
            <option value="mountain" <%=listing.category.includes('mountain') ? 'selected' : '' %>>Mountains</option>
            <option value="room" <%=listing.category.includes('room') ? 'selected' : '' %>>Rooms</option>
            <option value="amazingPool" <%=listing.category.includes('amazingPool') ? 'selected' : '' %>>Amazing Pool
            </option>
            <option value="camping" <%=listing.category.includes('camping') ? 'selected' : '' %>>Camping</option>
            <option value="farm" <%=listing.category.includes('farm') ? 'selected' : '' %>>Farms</option>
            <option value="arctic" <%=listing.category.includes('arctic') ? 'selected' : '' %>>Arctic</option>
            <option value="boat" <%=listing.category.includes('boat') ? 'selected' : '' %>>Boats</option>
            <option value="iconicCities" <%=listing.category.includes('iconicCities') ? 'selected' : '' %>>Iconic Cities
            </option>
            <option value="castle" <%=listing.category.includes('castle') ? 'selected' : '' %>>Castles</option>
            <option value="trending" <%=listing.category.includes('trending') ? 'selected' : '' %>>Trending</option>
          </select>
          <div class="form-text">Click to select multiple categories (Ctrl/Cmd + click).</div>
        </div>

        <button class="btn btn-dark add-btn mt-3">edit</button>
      </form>
    </div>
  </div>
  <script>
    const dropdownEdit = document.getElementById('editDropdown');
    const placeholderEdit = document.getElementById('placeholderEdit');

    dropdownEdit.size = 1; // default collapsed

    dropdownEdit.addEventListener('focus', () => {
        dropdownEdit.size = dropdownEdit.options.length; // expand
        placeholderEdit.style.display = 'none'; // hide placeholder
    });

    dropdownEdit.addEventListener('blur', () => {
        dropdownEdit.size = 1; // collapse
        if (dropdownEdit.selectedOptions.length === 0) {
            placeholderEdit.style.display = 'block'; // show if nothing selected
            placeholderEdit.selected = true;
        }
    });
</script>